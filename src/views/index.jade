extends layout

block content
  h2= title
  p.lead Welcome to #{title}, here we use relations between objects to draw conclusions, analyse patterns and run custom logic on the information provided. The goal is to have the memory as a organic graph, growing and retracting.
  div(ng-controller="GraphCtrl")
    form#addrel.form-inline(ng-submit="addRel()")
      row
        input.span2(type="text", name="Obj", ng-model="Obj", placeholder="Object Name…")
        span1 ->
        select(name='Rel', ng-model="Rel")
          option(value='is_a', selected='selected') is a
          option(value='eats' ) eats
          option(value='likes' ) likes
        span1 ->
        input.span2(type="text", name="Sub", ng-model="Sub", placeholder="Subject…")
        span1 ...
        input.span2.btn.success(type="submit", value="submit")
    h3 {{selected.node.name}}
    canvas#graphCanvas(width="800", height="600", ng-click="click($event)")

block append scripts
  != js('graphRenderer')
  != js('graphCtrl')
  != js('index')

doctype 5
html(lang="en", ng-app)
  head
    title= title
    meta(name='description', content='A data management system using relationships between entities to store data.')
    meta(name='author', content='Dylan Clement')
    // HTML5 shim, for IE6-8 support of HTML elements
    //if lt IE 9
      script(src='//html5shim.googlecode.com/svn/trunk/html5.js')
    //if lte IE 8
      script
        document.createElement('ng-include');
        document.createElement('ng-pluralize');
        document.createElement('ng-view');

        document.createElement('ng:include');
        document.createElement('ng:pluralize');
        document.createElement('ng:view');
    block stylesheets
      link(rel='stylesheet', href='/lib/bootstrap/css/bootstrap.min.css')
      //link(rel='stylesheet', href='/stylesheets/style.css')
      != css('style')

  body
    div.container
      div.navbar
        div.navbar-inner
          a.brand(href="/") Home
          a.brand(href="/calculations") Calculations

      block content

      block scripts
        script(src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js")
        script(src="//ajax.googleapis.com/ajax/libs/angularjs/1.0.5/angular.js")
        script(src="/lib/arbor/arbor.js")

    div.footer
      p.muted &copy; dylan clement 2013

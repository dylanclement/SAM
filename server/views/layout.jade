doctype html
html(lang='en', ng-app)
  head
    title= title
    meta(name='description', content='A data management system using relationships between entities to store data.')
    meta(name='author', content='Dylan Clement')
    // HTML5 shim, for IE6-8 support of HTML elements
    //if lt IE 9
      script(src='//html5shim.googlecode.com/svn/trunk/html5.js')
    //if lte IE 8
      script
        document.createElement('ng-include');
        document.createElement('ng-pluralize');
        document.createElement('ng-view');

        document.createElement('ng:include');
        document.createElement('ng:pluralize');
        document.createElement('ng:view');
    block stylesheets
      link(rel='stylesheet', href='/vendor/bootstrap/css/bootstrap.min.css')
      link(rel='stylesheet', href='/css/style.css')
  body
    div.container
      div.navbar
        div.navbar-inner
          a.brand(href="/view/home") Home
          a.brand(href="/view/calculations") Calculations
          a.brand(href="/view/edit-graph") Edit

      block content

  div.footer
    p.muted &copy; dylan clement #{(new Date()).getFullYear()}

      block scripts
        script(src="//ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js")
        script(src="//ajax.googleapis.com/ajax/libs/angularjs/1.0.6/angular.min.js")
        script(src="/vendor/arbor/arbor.js")
        script(src="/js/index.js")
